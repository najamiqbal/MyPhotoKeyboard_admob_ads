<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/keyboard_popup_panel_background"
        >
    <keyboard.cheetahphotokeyboard.neon.saad_Keybord_BaseImg_View
            xmlns:latin="http://schemas.android.com/apk/res/keyboard.cheetahphotokeyboard.neon"
            android:id="@+id/basiimgview"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/keyboard_background"

            latin:keyBackground="@drawable/btn_keyboard_key_stone"
            latin:keyTextColor="@color/latinkeyboard_key_color_black"
            latin:keyHintColor="#FF777777"
            latin:keyCursorColor="@color/latinkeyboard_dim_color_black"
            latin:shadowColor="@color/latinkeyboard_key_color_white"
            latin:recolorSymbols="true"
            latin:keyPreviewLayout="@layout/empty_activity"
            latin:popupLayout="@layout/empty_activity"
        />
</LinearLayout>
