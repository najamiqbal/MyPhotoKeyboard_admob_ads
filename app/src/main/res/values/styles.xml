<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LatinKeyboardBaseView">
        <item name="android:background">@drawable/keyboard_background</item>

        <item name="keyBackground">@drawable/btn_keyboard_key_ics</item>
        <item name="keyTextSize">@dimen/key_text_size</item>
        <item name="keyTextColor">#FFFFFFFF</item>
        <item name="keyHintColor">#FF222222</item>
        <item name="keyCursorColor">#FFBBBBBB</item>
        <item name="keyPreviewLayout">@layout/keybord_bg_before</item>
        <item name="keyPreviewOffset">@dimen/key_preview_offset</item>
        <item name="keyPreviewHeight">@dimen/key_preview_height</item>
        <item name="labelTextSize">@dimen/key_label_text_size</item>
        <item name="popupLayout">@layout/keyboard_popup</item>
        <item name="keyHysteresisDistance">@dimen/key_hysteresis_distance</item>
        <item name="verticalCorrection">@dimen/keyboard_vertical_correction</item>
        <item name="shadowColor">#BB000000</item>
        <item name="shadowRadius">2.75</item>
        <item name="backgroundDimAmount">0.5</item>
        <item name="symbolColorScheme">white</item>
        <item name="recolorSymbols">false</item>
        <item name="backgroundAlpha">255</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_inactive</item>
        <item name="colorControlActivated">@color/rating_active</item>
    </style>

    <style name="KeyPreviewAnimation">
        <item name="android:windowEnterAnimation">@anim/saadkeybord_before_in</item>
        <item name="android:windowExitAnimation">@anim/saadkeybord_before_out</item>
    </style>

    <style name="MiniKeyboardAnimation">
        <item name="android:windowEnterAnimation">@anim/saad_short_mykeybord_in</item>
        <item name="android:windowExitAnimation">@anim/saad_short_mykeybord_out</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="android:actionModeCloseDrawable">@drawable/privieus_btn</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>  //overflow icon color
        <item name="colorControlNormal">@android:color/white</item> //actionbar homebutton color
    </style>

</resources>
